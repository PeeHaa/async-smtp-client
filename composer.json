{
  "name": "peehaa/async-smtp-client",
  "description": "Asynchronous SMTP client",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Pieter Hordijk",
      "email": "info@pieterhordijk.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.4",
    "amphp/amp": "^2.2.0",
    "amphp/file": "^1.0",
    "amphp/log": "^1.0",
    "psr/log": "^1.1"
  },
  "require-dev": {
    "infection/infection": "^0.13.4",
    "maglnet/composer-require-checker": "^2.0",
    "phpunit/phpunit": "^8.3",
    "slevomat/coding-standard": "^5.0.4",
    "squizlabs/php_codesniffer": "^3.4.2"
  },
  "autoload": {
    "psr-4": {
      "PeeHaa\\AsyncSmtpClient\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PeeHaa\\AsyncSmtpClientTest\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  }
}
